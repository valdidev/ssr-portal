<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Añadir Tarea</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <div class="container">
        <h1>Añadir Nueva Tarea</h1>
        <form id="addTaskForm" action="/add" method="POST" class="form">
            <div class="form-group">
                <label for="title">Título</label>
                <input type="text" id="title" name="title" class="input" required>
            </div>
            <div class="form-group">
                <label for="description">Descripción</label>
                <textarea id="description" name="description" class="textarea" required></textarea>
            </div>
            <div class="form-group">
                <label for="priority">Prioridad (1-10)</label>
                <select id="priority" name="priority" class="input" required>
                    <% for (let i=1; i <=10; i++) { %>
                        <option value="<%= i %>">
                            <%= i %>
                        </option>
                        <% } %>
                </select>
            </div>
            <div class="form-group">
                <label for="users">Asignar Usuarios</label>
                <select id="users" name="users" multiple class="input">
                    <% users.forEach(user=> { %>
                        <option value="<%= user.id %>">
                            <%= user.name %> (<%= user.email %>)
                        </option>
                        <% }) %>
                </select>
            </div>
            <button type="submit" class="submit-btn">Añadir Tarea</button>
        </form>
        <a href="/" class="back-link">Volver</a>
    </div>
    <script>
        // Aplicar tema guardado
        const body = document.body;
        const currentTheme = localStorage.getItem('theme') || 'light';
        body.classList.add(currentTheme + '-theme');
        // Enviar formulario con Enter
        document.getElementById('addTaskForm').addEventListener('keydown', function (event) {
            if (event.key === 'Enter' && !event.shiftKey && event.target.tagName !== 'SELECT') {
                event.preventDefault();
                this.submit();
            }
        });
    </script>
</body>

</html>