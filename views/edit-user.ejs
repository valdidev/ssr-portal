<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Usuario</title>
    <link rel="stylesheet" href="/styles.css">
</head>

<body>
    <div class="container">
        <h1>Editar Usuario</h1>
        <form id="editUserForm" action="/edit-user/<%= user.id %>" method="POST" class="form">
            <div class="form-group">
                <label for="name">Nombre</label>
                <input type="text" id="name" name="name" value="<%= user.name %>" class="input" required>
            </div>
            <div class="form-group">
                <label for="email">Email</label>
                <input type="email" id="email" name="email" value="<%= user.email %>" class="input" required>
            </div>
            <button type="submit" class="submit-btn">Actualizar Usuario</button>
        </form>
        <a href="/users" class="back-link">Volver</a>
    </div>
    <script>
        // Aplicar tema guardado
        const body = document.body;
        const currentTheme = localStorage.getItem('theme') || 'light';
        body.classList.add(currentTheme + '-theme');
        // Enviar formulario con Enter
        document.getElementById('editUserForm').addEventListener('keydown', function (event) {
            if (event.key === 'Enter' && !event.shiftKey) {
                event.preventDefault();
                this.submit();
            }
        });
    </script>
</body>

</html>